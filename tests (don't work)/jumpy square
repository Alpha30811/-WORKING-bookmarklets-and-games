var xpos=0;
var ypos=0;
var playerspeed=6;

(function () {
	var you = document.createElement('div');
	var body = document.getElementsByTagName('body')[0];
	body.appendChild(you);

	you.style.position = 'fixed';
	you.style.top = ''+ypos+'px';
	you.style.right = ''+xpos+'0px';
	you.style.margin = '10px';
	you.style.paddingTop = '10px';
	you.style.width = '200px';
	you.style.height = '200px';
	you.style.zIndex = 10000;
	you.style.opacity = 0.9;
	you.style.color = 'black';
	you.style.backgroundColor = 'blue';
	you.style.border = '0px solid white';
	you.style.textAlign = 'center';
	you.id = 'you';
	you.style.display = 'block';
	function moveleft(){
            xpos=xpos-playerspeed;
            you.style.left = ''+xpos+'px';
        }
	function moveright(){
            xpos=xpos+playerspeed;
            you.style.left = ''+xpos+'px';
        }
	function moveup(){
            ypos=ypos-playerspeed;
            you.style.top = ''+ypos+'px';
        }
	function movedown(){
            ypos=ypos+playerspeed;
            you.style.top = ''+ypos+'px';
        }
        window.addEventListener("keydown",function(event){
            if(event.key=="ArrowLeft"){
                moveleft();
            }
        });
	window.addEventListener("keydown",function(event){
            if(event.key=="ArrowRight"){
                moveright();
            }
        });
	window.addEventListener("keydown",function(event){
            if(event.key=="ArrowUp"){
                moveup();
            }
        });
	window.addEventListener("keydown",function(event){
            if(event.key=="ArrowDown"){
                movedown();
            }
        });
}());
alert("working");
